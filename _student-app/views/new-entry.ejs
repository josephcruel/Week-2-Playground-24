// Form style page.

<% include('header') %>
<h2>Fill a new entry form</h2>

<form method="post" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Entry title"
            required
        />
    </div>
    <div class="form-group">
        <label for="body">Entry text</label>
        <textarea
        class="form-control"
        id="body"
        name="body"
        placeholder="Express is tool of building Server-Side"
        >
        </textarea>
    </div>
    <div class="form-control">
        <input type="submit" value="Post entry information" class="btn btn-primary" />
    </div>
</form>

<% include('footer') %>